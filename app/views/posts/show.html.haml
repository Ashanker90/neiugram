.posts-wrapper.row
  .post-head.text-center
    Your Post!
  .post
    .post-head
      .name
        Anshul Shanker
    .image.center-block
      =image_tag @post.image.url(:medium)
    %p.caption
      =@post.caption
  .text-center.edit-links
    = link_to "Cancel", posts_path
    |
    = link_to "Edit Post", edit_post_path(@post)
